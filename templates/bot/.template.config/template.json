{
  "$schema": "http://json.schemastore.org/template",
  "author": "Bot Team",
  "groupIdentity": "Stalinon.Bot.Templates",
  "identity": "Stalinon.Bot.Templates.Bot",
  "name": "Bot",
  "shortName": "bot",
  "sourceName": "BotApp",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "transport": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "polling" },
        { "choice": "webhook" }
      ],
      "defaultValue": "polling",
      "replaces": "{{transport}}"
    },
    "public-url": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "replaces": "{{public-url}}"
    },
    "webhook-secret": {
      "type": "generated",
      "generator": "guid",
      "replaces": "{{webhook-secret}}"
    },
    "store": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "file" },
        { "choice": "redis" },
        { "choice": "ef" }
      ],
      "defaultValue": "file",
      "replaces": "{{store}}"
    },
    "redis": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "replaces": "{{redis}}"
    },
    "ef-provider": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "postgres" },
        { "choice": "sqlite" }
      ],
      "defaultValue": "",
      "replaces": "{{ef-provider}}"
    },
    "ef-conn": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "replaces": "{{ef-conn}}"
    },
    "admin": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "webapp": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "lang": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "ru" },
        { "choice": "en" }
      ],
      "defaultValue": "ru"
    },
    "bot-token": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "replaces": "{{bot-token}}"
    },
    "package-version": {
      "type": "bind",
      "binding": "PackageVersion",
      "replaces": "0.0.0",
      "defaultValue": "0.0.0"
    }
  },
  "primaryOutputs": [
    { "path": "BotApp.csproj" }
  ]
}
